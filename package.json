{
  "license": "MIT",
  "scripts": {
    "serve": "parcel app/index.html --open",
    "build": "parcel build app/index.html --public-url .",
    "rebuild": "yarn clean && yarn build --no-cache",
    "clean": "rm -rf .cache dist",
    "lint": "eslint app/**/*.js app/**/*.svelte",
    "test": "jasmine"
  },
  "dependencies": {
    "tachyons": "^4.10.0"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "parcel-bundler": "^1.9.7",
    "parcel-plugin-inliner": "^1.0.0",
    "parcel-plugin-purifycss": "^1.0.0",
    "parcel-plugin-svelte": "^1.2.2",
    "svelte": "^2.9.5"
  },
  "optionalDependencies": {
    "@tivac/eslint-plugin-svelte": "^1.1.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-unicorn": "^4.0.3",
    "jasmine": "^3.1.0"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "airbnb-base"
    ],
    "plugins": [
      "promise",
      "no-loops",
      "unicorn",
      "html"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "settings": {
      "html/html-extensions": [".html", ".svelte"]
    },
    "globals": {
      "document": true
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-new": "off",
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "import/no-unresolved": "off"
    }
  }
}
